<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="ehalal.skripsi.com.ehalal2.HasilScan">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="30dp"
        android:background="#1c1cf4e2"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/logo" />

        <TextView
            android:id="@+id/TextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:text="Produk Halal Bersertifikasi"
            android:textSize="16dip"
            android:textStyle="bold" />

        <View
            android:id="@+id/View1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:background="#448AFF" />

        <TextView
            android:id="@+id/txt_nos"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="No Sertifikat"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/txt_jenis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="Jenis"
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold|italic" />

        <TextView
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold|italic"
            android:id="@+id/txt_np"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="Nama Produk" />

        <TextView
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold|italic"
            android:id="@+id/txt_npr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="Nama Perusahaan" />

        <TextView
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold|italic"
            android:id="@+id/txt_tglbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="Tanggal Mendaftar" />

        <TextView
            android:textColor="@android:color/holo_green_dark"
            android:textStyle="bold|italic"
            android:id="@+id/txt_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:text="MasaBerlaku" />


    </LinearLayout>

</RelativeLayout>
